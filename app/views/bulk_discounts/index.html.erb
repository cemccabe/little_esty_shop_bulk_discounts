<h1><%= @merchant.name %> Discounts</h1>
<div id="bulk_discounts">
  <% @merchant.bulk_discounts.each do |bd| %>
    <p><%= link_to "Bulk Discount #{bd.id}", "/merchant/#{@merchant.id}/bulk_discounts/#{bd.id}" %></p>
    <p>Percentage: <%= bd.percentage %></p>
    <p>Quantity Threshold: <%= bd.quantity_threshold %></p>
    <p><%= link_to "Delete Bulk Discount #{bd.id}", "/merchant/#{@merchant.id}/bulk_discounts/#{bd.id}", method: :delete %></p>
    <br>
  <% end %>
</div>

<div id="new_discount">
  <%= link_to 'Create a New Discount', new_merchant_bulk_discount_path(@merchant) %>
</div>